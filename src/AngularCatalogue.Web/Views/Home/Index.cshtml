            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">Colours</li>
                    <li ng-repeat="colour in colours"><input type="checkbox" value="{{colour.Id}}"  />{{colour.Caption}}</li>
